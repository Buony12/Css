  font-family: Arial, sans-serif;
}

.name {
  font-size: 24px;
  font-weight: bold;
  color: #333;
}

.email {
  font-size: 18px;
  color: #666;
}

.age {
  font-size: 16px;
  color: #999;
}

.company {
  font-size: 20px;
  color: #555;
}

/* Example usage */
<div class="name">Buony Lam</div>
<div class="email">thembuonylam@gmail.com</div>
<div class="age">26</div>
<div class="company">Debo Engineering</div>
